<ui:FluentWindow
	x:Class="OllamaClient.MainView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:OllamaClient.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OllamaClient"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	xmlns:vm="clr-namespace:OllamaClient.ViewModels"
	xmlns:view="clr-namespace:OllamaClient.Controls"
	Title="{Binding Title, Mode=OneWay}"
	MinWidth="700"
	MinHeight="200"
	MaxWidth="700"
	d:DataContext="{d:DesignInstance Type=vm:MainViewModel,
	                                 IsDesignTimeCreatable=False}"
	Background="{ui:ThemeResource ApplicationBackgroundBrush}"
	SizeToContent="Height"
	WindowCornerPreference="Round"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<ui:FluentWindow.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter" />
		<c:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
	</ui:FluentWindow.Resources>

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Label
				x:Name="modelNameLbl"
				Grid.Column="0"
				Margin="5,5,5,5"
				HorizontalAlignment="Left"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="Model"
				FontSize="18" />

			<ComboBox
				Name="ModelsCB"
				Grid.Column="1"
				Width="120"
				Height="36"
				Margin="5,5,5,5"
				ItemsSource="{Binding Models}"
				SelectedItem="{Binding SelectedModel}" />
		</Grid>

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<StackPanel>
				<Label
					x:Name="promptLbl"
					Content="Enter Prompt"
					FontSize="20" />
				<TextBox
					x:Name="promptTB"
					Height="36"
					Margin="0,5,0,0"
					HorizontalContentAlignment="Right"
					Text="{Binding Prompt, Mode=TwoWay}" />
			</StackPanel>

			<Grid
				Grid.Row="2"
				Margin="0,5,0,5"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Button
					x:Name="sendBtn"
					Grid.Column="0"
					Width="120"
					Height="36"
					Margin="5,5,5,5"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Command="{Binding SendPromptCommand}"
					Content="Send Prompt" />
			</Grid>
		</Grid>

		<Button
			Name="ShowModelInfo"
			Grid.Row="2"
			Width="200"
			Margin="0,5,0,5"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Command="{Binding ShowModelInfoCommand}"
			Content="Show Model Info" />

		<ui:ProgressRing
			Grid.Row="3"
			IsIndeterminate="True"
			Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisiblityConverter}, Mode=TwoWay}" />

		<TextBox
			Name="ApiResponseTB"
			Grid.Row="3"
			Width="660"
			Height="200"
			AcceptsReturn="True"
			IsReadOnly="True"
			Text="{Binding ApiResponse, Mode=OneWay}"
			TextWrapping="Wrap"
			Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=TwoWay}" />

		<view:StatusBarView Grid.Row="4" Margin="0,0,0,0" />
	</Grid>

</ui:FluentWindow>
