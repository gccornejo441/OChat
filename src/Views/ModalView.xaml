<Window
	x:Class="OllamaClient.Views.ModalView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OllamaClient.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="{Binding Modal.Title}"
	Width="400"
	Height="200"
	mc:Ignorable="d">
	<Grid>
		<TextBlock Text="{Binding Modal.Message}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		<Button Content="Close" Command="{Binding CloseCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
	</Grid>
</Window>
